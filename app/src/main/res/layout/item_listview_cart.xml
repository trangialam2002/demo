<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center">
    <ImageView
        android:id="@+id/imgCart"
        android:src="@drawable/emptycart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="3.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="10dp"
            android:textColor="#03A9F4"
            android:id="@+id/txtTenCart"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="tên sản phẩm tên sản phẩm tên sản phẩm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#FFC107"
            android:id="@+id/txtGiaCart"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="10.000.000 VNĐ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/ibtnGiamCart"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/ic_giam"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            <EditText
                android:id="@+id/txtSoLuongCart"
                android:textColor="#E4E05E36"
                android:textSize="18dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibtnTangCart"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="center"
                android:src="@drawable/ic_tang"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:layout_gravity="bottom|end"
                android:id="@+id/ibtnDeleteCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>