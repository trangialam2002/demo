<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/custom_lienhe"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSanPhamHoaDon"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:padding="10dp"
            android:src="@drawable/emptycart" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingRight="10dp"
                android:id="@+id/txtTenSPHoaDon"
                android:textStyle="bold"
                android:textSize="22dp"
                android:gravity="right"
                android:text="Iphone 14 ProMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Số lượng:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtSoLuongHoaDon"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="x1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Đơn giá:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#a62828"
                    android:id="@+id/txtDonGiaHoaDon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:text="1.000.000 VNĐ"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Thành tiền:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#a62828"
                    android:id="@+id/txtThanhTienHoaDon"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="1.000.000 VNĐ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Thời gian:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#a62828"
                    android:id="@+id/txtThoiGianHoaDon"
                    android:paddingRight="15dp"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="10-10-2022 10:10:10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>