<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.LienHeActivity">
    <LinearLayout
        android:background="#a62828"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/ibtnBackLienHe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Liên Hệ"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="70dp"
        android:textColor="#a62828"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Liên hệ với chúng tôi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_lienhe"
        android:layout_width="370dp"
        android:layout_height="80dp">
    <ImageView
        android:padding="6dp"
        android:src="@drawable/icon_admin"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:scaleType="fitCenter"/>
        <TextView
            android:gravity="center"
            android:textColor="#a62828"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:text="Nhóm 4: Thiện-Phúc-Khánh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_lienhe"
        android:layout_width="370dp"
        android:layout_height="80dp">
        <ImageView
            android:padding="5dp"
            android:src="@drawable/icon_email"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"/>
        <TextView
            android:gravity="center"
            android:textColor="#a62828"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:text="Email: group4@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_lienhe"
        android:layout_width="370dp"
        android:layout_height="80dp">
        <ImageView
            android:padding="10dp"
            android:src="@drawable/icon_phone"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"/>
        <TextView
            android:gravity="center"
            android:textColor="#a62828"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:text="Hotline: 0123456789"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>